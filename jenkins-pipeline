#!/usr/bin/env groovy

pipeline{
    agent any
    stages{
        stage('Validate the Application'){
            steps{
                script{
                    bat 'mvn validate'
                }
            }
        }
        stage('Compiling the Application'){
            steps{
                script{
                    bat 'mvn compile'
                }
            }
        }
        stage('Testing the Application'){
            steps{
                script{
                    bat 'mvn test'
                }
            }
        }
        stage('Package Application'){
            steps{
                script{
                    bat 'mvn package'
                }
            }
        }
    }
}

